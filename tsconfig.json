{
  "compilerOptions": {
    "outDir": ".build",
    "rootDir": "./",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@types/node"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", ".build", "test"]
}
